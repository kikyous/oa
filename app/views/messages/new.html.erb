<%= form_for :message, :url => messages_path do |f| %>
  <div>
    <%= f.label '收件人' %>  <br />
    <%#= text_field_tag "to" %> 
    <%= select(:main, :to, User.all.map{|u| [u.username ,u.id] } ,{:prompt=>''} ,{:class=>"chzn-select","data-placeholder"=>"请选择"}) %>
  </div>
  <div>
    <%= f.label '主题' %>  <br />
    <%= f.text_field :topic, :class => "text_field" %> 
  </div>
  <div>
    <%= f.label '内容' %>  <br />
    <%= f.text_area :body, :class => "text_field" %> 
  </div>
  <%= f.submit "发送" %> 
<% end %>
