<style type="text/css">
  input {
    height:18px; width:130px; border:solid 1px #cadcb2; font-size:12px; color:#81b432;
  }
  body {
    margin-left: 0px;
    margin-top: 0px;
    margin-right: 0px;
    margin-bottom: 0px;
    overflow:hidden;
  }
</style>
<table width="100%" height="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td bgcolor="#e5f6cf"></td>
  </tr>
  <tr>
    <td height="608" background="<%= asset_path("login/login_03.gif") %>">
      <table width="862" border="0" align="center" cellpadding="0" cellspacing="0">
        <tr>
          <td height="266" background="<%= asset_path("login/login_04.gif") %>"></td>
        </tr>
        <tr>
          <td height="95">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td width="424" height="95" background="<%= asset_path("login/login_06.gif") %>"></td>
                <td width="183" background="<%= asset_path("login/login_07.gif") %>">
                  <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => "login" } ) do |f| %>
                      <tr>
                        <td width="21%" height="30"><div align="center"><span class="style3">用户</span></div></td>
                        <td width="79%" height="30">
                          <%= f.text_field :username %>
                        </td>
                      </tr>

                      <tr>
                        <td height="30"><div align="center"><span class="style3">密码</span></div></td>
                        <td height="30">
                          <%= f.password_field :password %>
                        </td>
                      </tr>
                    <% end %>

                    <tr>
                      <td height="30"></td>
                      <td height="30"><img src="<%= asset_path("login/dl.gif") %>" width="81" height="22" border="0" usemap="#Map"></td>
                    </tr>
                  </table>
                </td>
                <td width="255" background="<%= asset_path("login/login_08.gif") %>"></td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td height="247" valign="top" background="<%= asset_path("login/login_09.gif") %>">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td width="22%" height="30"></td>
                <td width="56%"></td>
                <td width="22%"></td>
              </tr>
              <tr>
                <td></td>
                <td height="30">
                  <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                      <td width="44%" height="20"></td>
                      <td width="56%" class="style4">版本 2012V1.0 </td>
                    </tr>
                  </table>
                </td>
                <td></td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td bgcolor="#a2d962"></td>
  </tr>
</table>
<map name="Map">
  <area shape="rect" coords="3,3,36,19" href="#" id="user_submit">
  <area shape="rect" coords="40,3,78,18" href="#">
</map>

<script type="text/javascript">
  $(document).ready(function(){
    $("#user_username").focus();
    function send(){
      var loginForm = document.getElementById("login");
      loginForm.submit();
    }
    $("#user_submit").click(send);
    $('#user_password').bind('keyup', function(event){
      if (event.keyCode=="13"){
        send();
      }
    });

  });
</script>
