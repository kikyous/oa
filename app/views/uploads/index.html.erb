<script type="text/javascript">
$(document).ready(function(){
  $.current_page=0;
  $.ajaxSetTable("/uploads/0");

  $("#control").click(function(e){
    var e=e||window.event;
    var obj=e.target||e.srcElement;
    var item=$(obj);
    if  ( item.is('img') )
    {
      if (item.hasClass('next') && $.current_page<$.all_pages-1){
        $.current_page+=1;
        $.ajaxSetTable('/uploads/'+$.current_page);
      }
      else if (item.hasClass('prev') && $.current_page!=0 ){ 
        $.current_page-=1;
        $.ajaxSetTable('/uploads/'+$.current_page);
      }
    }

  });


});
</script>

